@model IEnumerable<PizzaStoreMvc.Client.DomainModels.Pizza>

@{
  ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
  @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
  <tr>
    <th>
      OrderID
    </th>
    <th>
      Crust
    </th>
    <th>
      Sauce
    </th>
    <th>
      Size
    </th>
    <th>
      Price
    </th>
    <th></th>
  </tr>

  @foreach (var item in Model)
  {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.Order.OrderID)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Crust.Name)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Sauce.Name)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Size.Name)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Size.Price)
      </td>
      <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.PizzaId }) 
        @*@Html.ActionLink("Details", "Details", new { id = item.PizzaId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.PizzaId })*@
      </td>
    </tr>
  }

</table>
